<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender for Kubernetes -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <loggerName/>
                <message/>
                <mdc/>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- Fallback to simple pattern if JSON encoder not available -->
    <appender name="CONSOLE_FALLBACK" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE_FALLBACK"/>
    </root>

    <!-- Application Logger -->
    <logger name="com.valantic.sti.image" level="INFO"/>
    
    <!-- AWS SDK Logger -->
    <logger name="software.amazon.awssdk" level="WARN"/>
    
    <!-- Spring Framework -->
    <logger name="org.springframework" level="INFO"/>
    
    <!-- Actuator Health Checks -->
    <logger name="org.springframework.boot.actuate.health" level="INFO"/>
</configuration>